{
  "name": "OTON Wallet",
  "description": "OTON Wallet",
  "default_locale": "en",
  "version": "0.3.4",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "clipboardWrite",
    "notifications",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://localhost/*", "*://bitbon.108dex.space/*"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/oton16.png",
      "32": "icons/oton32.png"
    }
  },
  "icons": {
    "16": "icons/oton16.png",
    "32": "icons/oton32.png"
  }
}
