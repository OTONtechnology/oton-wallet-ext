{
  "name": "OTON Wallet",
  "description": "OTON Wallet",
  "default_locale": "en",
  "version": "0.4.5",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://localhost/*", "*://bitbon.108dex.space/*", "*://bitbon.tasq.pro/*"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/oton16.png",
      "32": "icons/oton32.png"
    }
  },
  "icons": {
    "16": "icons/oton16.png",
    "32": "icons/oton32.png"
  }
}
