{
  "name": "oton-wallet-chrome",
  "description": "OTON wallet Chrome extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "clipboardWrite",
    "webRequest",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/oton16.png",
      "32": "icons/oton32.png"
    }
  },
  "icons": {
    "16": "icons/oton16.png",
    "32": "icons/oton32.png"
  }
}
