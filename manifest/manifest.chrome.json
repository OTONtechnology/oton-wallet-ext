{
  "name": "OTON Wallet",
  "short_name": "OTN",
  "description": "OTON Wallet",
  "default_locale": "en",
  "version": "1.1.6",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://bitbon.108dex.space/*",
        "*://bitbon.tasq.pro/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/oton16.png",
      "32": "icons/oton32.png"
    }
  },
  "icons": {
    "16": "icons/oton16.png",
    "32": "icons/oton32.png"
  }
}