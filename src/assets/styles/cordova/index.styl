html {
  overflow-x: auto;
  overflow-y: auto;
}

.main-container {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  min-width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  overflow: auto;
}

.layout {
  overflow: auto;
  max-width: 600px;
  padding-bottom: 15px;
}

.transactions__buttons {
  padding-bottom: 0;
}

.transactions__list {
  && {
    max-height: calc(100vh - 40px - 76px - 63px - 24px - 17px - 40px);
  }
}